@model IEnumerable<BanHang.Models.Contact>

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Categories" class="nav-link">Quản lý liên hệ</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-header" style="text-align:center">
        <h3 class="card-title" style="font-size:30px">Danh sách Liên Hệ</h3>
        <div class="card-tools">
            <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
            <!-- Added the "fas fa-plus" icon for "Thêm mới" -->
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="thead-light">
            <tr>
                <th style="width: 10%;">@Html.DisplayNameFor(model => model.Name)</th>
                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Phone)</th>
                <th style="width: 25%;">@Html.DisplayNameFor(model => model.Message)</th>
        
                <th style="width: 10%;">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                
                <th style="width: 10%;">@Html.DisplayNameFor(model => model.ModifiedDate)</th>
                <th style="width: 25%;">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 10%;">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td style="width: 15%;">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td style="width: 15%;">@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td style="width: 25%;">@Html.DisplayFor(modelItem => item.Message)</td>
                    
                    <td style="width: 10%;">@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    
                    <td style="width: 10%;">@Html.DisplayFor(modelItem => item.ModifiedDate)</td>
                    <td style="width: 25%;">
                        <a href="@Url.Action("Edit", new { id = item.IDContact })" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Details", new { id = item.IDContact })" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.IDContact })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

