@model IPagedList<BanHang.Models.User>
@using PagedList.Mvc;
@using PagedList;


@{
    ViewBag.Title = "Index";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/users" class="nav-link">Quản lý Tài Khoản</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-header" style="text-align:center">
        <h3 class="card-title" style="font-size:30px">Danh sách Tài Khoản</h3>
        <div class="card-tools">
            <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>

        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="thead-light">
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Role</th>
                <th scope="col">UserName</th>
                <th scope="col">Tên Tài Khoản</th>
                <th scope="col">Số Điện Thoại</th>
                <th scope="col">Địa Chỉ</th>
                <th scope="col">Email</th>

                <th scope="col">Chức Năng</th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.Role1)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>

                    <td>
                        <a href="@Url.Action("Edit", new { id = item.UserID })" class="btn btn-primary"><i class="fas fa-edit"></i> </a>
                        <a href="@Url.Action("Details", new { id = item.UserID })" class="btn btn-info"><i class="fas fa-info-circle"></i> </a>
                        <a href="@Url.Action("Delete", new { id = item.UserID })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>

