@model IEnumerable<BanHang.Models.Role>

@{
    ViewBag.Title = "Index";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/roles" class="nav-link">Phân Quyền</a>
        </li>
    </ul>
}

<div class="card">
    <div class="card-header" style="text-align:center">
        <h3 class="card-title" style="font-size:30px">Danh sách Quyền</h3>
        <div class="card-tools">
            <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
            <a href="#" class="btn btn-danger" id="BtnDeleteAll"><i class="fas fa-trash-alt"></i> Xóa</a>
        </div>
    </div>
</div>

<table class="table table-hover table-bordered text-center">
    <thead class="thead-light">
        <tr>
            <th>Số Thứ Tự</th>
            <th>@Html.DisplayNameFor(model => model.Role1)</th>
            <th>Chức Năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IDRole)</td>
                <td>@Html.DisplayFor(modelItem => item.Role1)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.IDRole })" class="btn btn-primary"><i class="fas fa-edit"></i> </a>
                    <a href="@Url.Action("Details", new { id = item.IDRole })" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.IDRole })" class="btn btn-danger" ><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
