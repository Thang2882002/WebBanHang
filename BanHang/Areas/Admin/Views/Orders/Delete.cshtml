@model BanHang.Models.Order

@{
    ViewBag.Title = "Delete";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/orders" class="nav-link">Quản lý đơn hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Xóa đơn hàng</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-header" style="text-align:center">
        <h3 class="card-title" style="font-size:30px">Xóa đơn hàng</h3>

    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 style="margin-bottom: 20px;" class="card-title">Chi tiết đơn hàng</h4>
        <hr style="margin-top: 20px;" />
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 20%">Mã Đơn Hàng</th>
                        <td>@Html.DisplayFor(model => model.OrderCode)</td>
                    </tr>
                    <tr>
                        <th>Tên Khách Hàng</th>
                        <td>@Html.DisplayFor(model => model.CustomerName)</td>
                    </tr>
                    <tr>
                        <th>Số điện thoại</th>
                        <td>@Html.DisplayFor(model => model.Phone)</td>
                    </tr>
                    <tr>
                        <th>Địa Chỉ</th>
                        <td>@Html.DisplayFor(model => model.Address)</td>
                    </tr>
                    <tr>
                        <th>Tổng Tiền</th>
                        <td>@Html.DisplayFor(model => model.TotalAmount)</td>
                    </tr>
                    <tr>
                        <th>Người tạo</th>
                        <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                    </tr>
                    <tr>
                        <th>Ngày tạo</th>
                        <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                    </tr>
                    <tr>
                        <th>Người sửa đổi</th>
                        <td>@Html.DisplayFor(model => model.ModifiedBy)</td>
                    </tr>
                    <tr>
                        <th>Ngày sửa đổi</th>
                        <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                    </tr>
                    <tr>
                        <th>Kiểu thanh toán</th>
                        <td>@Html.DisplayFor(model => model.TypePayment)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th>Tên Đăng Nhập</th>
                        <td>@Html.DisplayFor(model => model.Username)</td>
                    </tr>
                    <tr>
                        <th>Trạng thái</th>
                        <td>
                            @{
                                string status = Model.Status.HasValue ? (Model.Status.Value ? "Đã xác nhận đặt hàng" : "Đã Hủy") : "Không xác định";
                            }
                            @status
                        </td>
                    </tr>
                    <tr>
                        <th>Giao hàng</th>
                        <td>
                            @{
                                string status1 = Model.GiaoHang.HasValue ? (Model.GiaoHang.Value ? "Đang giao hàng" : "Chờ giao hàng") : "Không xác định";
                            }
                            @status1
                        </td>
                    </tr>
                    <tr>
                        <th>Nhận hàng</th>
                        <td>
                            @{
                                string status2 = Model.NhanHang.HasValue ? (Model.NhanHang.Value ? "Đã nhận hàng" : "Chờ nhận hàng") : "Không xác định";
                            }
                            @status2
                        </td>
                    </tr>
                    <tr>
                        <th>Trạng Thái thanh toán</th>
                        <td>
                            @{
                                string status3 = Model.StatusPayment.HasValue ? (Model.StatusPayment.Value ? "Đã thanh toán" : "Chưa thanh toán") : "Không xác định";
                            }
                            @status3
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>