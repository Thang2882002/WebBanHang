@model IEnumerable<BanHang.Models.Order_Details>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Hình Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td><img src="@item.Product.Image" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@item.Product.Name</td>
                    <td>@BanHang.Common.Common.FormatNumber((item.Price), 0)</td>
                    <td>@item.Quantity</td>
                    <td>@BanHang.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
