@model BanHang.Models.User

@{
    ViewBag.Title = "Edit Account";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container " style="margin-top:180px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <h2 class="card-header text-center" style=" font-size: 22px; font-weight: bold;">CHỈNH SỬA THÔNG TIN KHÁCH HÀNG </h2>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-dark" })
                            @Html.HiddenFor(model => model.UserID)

                            <div class="form-group row">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right font-weight-bold" })
                                <div class="col-md-8" style=" margin-top: 6px;;">
                                    @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right font-weight-bold" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-dark" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right font-weight-bold" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-dark" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right font-weight-bold" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-dark" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right font-weight-bold" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-dark" })
                                </div>
                            </div>

                            <div class="form-group row justify-content-center">
                                <div class="col-md-6">
                                    <input type="submit" value="Chỉnh Sửa" class="btn btn-primary btn-block" style="width:100px;float:right;" />
                                </div>
                                <div class="col-md-6">
                                    @Html.ActionLink("Quay lại", "Info", "CustomerLogin", null, new { @class = "btn btn-secondary btn-block", style = "width: 100px;" })
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

