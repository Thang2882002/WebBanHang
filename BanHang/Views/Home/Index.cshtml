<!-- Slider -->
<style>
    .navbar_menu li a {
        position: relative; /* Thiết lập vị trí tương đối để tạo vùng chứa cho dash */
        color: #000; /* Màu chữ mặc định */
        text-decoration: none; /* Loại bỏ gạch chân mặc định */
    }

        .navbar_menu li a:hover {
            color: #FF0000; /* Đổi màu chữ thành đỏ khi hover */
        }

        .navbar_menu li a::after {
            content: ''; /* Nội dung rỗng */
            position: absolute; /* Vị trí tuyệt đối */
            bottom: -2px; /* Khoảng cách dash so với chữ */
            left: 0; /* Cách lề trái */
            width: 100%; /* Chiều rộng là 100% của menu item */
            height: 2px; /* Độ dày của dash */
            background-color: #000; /* Màu của dash */
            transform: scaleX(0); /* Đặt chiều dài của dash thành 0 ban đầu */
            transition: transform 0.3s ease; /* Tạo hiệu ứng chuyển đổi mềm mại */
        }

        .navbar_menu li a:hover::after {
            transform: scaleX(1); /* Kéo dài dash khi hover */
        }

    .image-container img {
        max-width: 100%;
        height: auto;
    }

    .form-container {
        text-align: center;
    }

    .social-icons {
        margin-top: 20px;
    }

        .social-icons a {
            color: #333;
            font-size: 24px;
            margin: 0 10px;
        }

    .btn1 {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
    }
    /* Custom CSS for horizontal alignment */
    .container-horizontal {
        display: flex;
        flex-direction: row;
    }

        .container-horizontal .image-container,
        .container-horizontal .form-container {
            flex: 1;
            padding: 10px;
        }

    /* Thông báo */
    #alert-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
    }

    .alert {
        position: relative;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        background: linear-gradient(to right, #00b09b, #96c93d); /* Gradient màu nền */
        color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Đổ bóng */
        transition: opacity 0.5s ease-in-out;
    }

    .alert-hide {
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

</style>

