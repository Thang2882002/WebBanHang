@model IEnumerable<BanHang.Models.Order_Details>
@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
@if (Model != null && Model.Any())
{
    <div class="container">
        @foreach (var orderDetail in Model)
        {
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10%;">Mã đơn hàng</th>
                                <th style="width: 15%;">Hình Ảnh</th>
                                <th style="width: 20%;">Tên sản phẩm</th>
                                <th style="width: 10%;">Size</th>
                                <th style="width: 10%;">Giá</th>
                                <th style="width: 10%;">Số lượng</th>
                                <th style="width: 15%;">Thành tiền</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@orderDetail.Order.OrderCode</td>
                                <td><img src="@orderDetail.Product.Image" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
                                <td>@orderDetail.Product.Name</td>
                                <td>@orderDetail.Size</td>
                                <td>@BanHang.Common.Common.FormatNumber((orderDetail.Price), 0)</td>
                                <td>@orderDetail.Quantity</td>
                                <td>@BanHang.Common.Common.FormatNumber((orderDetail.Price * orderDetail.Quantity), 0)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
}
