@model PagedList.PagedList<BanHang.Models.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                color: #333;
                text-decoration: none;
                padding: 10px 15px; /* Tùy chỉnh kích thước nút */
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px; /* Tùy chỉnh kích thước chữ */
                transition: background-color 0.3s ease; /* Hiệu ứng chuyển đổi màu nền */
            }

                .pagination li a:hover {
                    background-color: #f0f0f0;
                }

        .pagination .active a {
            background-color: #007bff;
            color: #fff;
        }

</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news"> Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/@item.Alias-n@(item.IDNews)" title="@item.Title" style=" font-family: SFD-Bold; font-size: 34px; line-height: 38px; color: #222; font-weight: bold; padding-right: 50px;">@item.Title </a></h3>
                        <div class="description-box">
                            @item.Descriptiom
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <div class="container"style="margin-bottom: 10px;">
            <div class="row justify-content-center">
                <div class="col-12">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    }

</div>
